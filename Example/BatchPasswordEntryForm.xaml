<Window x:Class="TapTrack.Demo.BatchPasswordEntryForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TapTrack.Demo"
        mc:Ignorable="d"
        Title="Set Batch Encoding NTAG21x Password" Height="200" Width="300"
        Background="{StaticResource LightBackground}"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" Margin="10" Background="{StaticResource LightBackground}">
        <TextBlock Foreground="White" HorizontalAlignment="Center">Enter Password:</TextBlock>
        <PasswordBox x:Name="batchTagPasswordEntry" Margin="10,10,10,10" Foreground="Black"/>
        <TextBlock Foreground="White" HorizontalAlignment="Center">Confirm Password:</TextBlock>
        <PasswordBox x:Name="batchTagPasswordConfirmation" Margin="10,10,10,10" Foreground="Black"/>
        <Button Style="{StaticResource RoundButton}" Click="setBatchPassword_Click">Set Password</Button>
    </StackPanel>
</Window>